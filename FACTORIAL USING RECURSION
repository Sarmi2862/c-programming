#include<stdio.h>
int fact(int a);
int main()
{
    int n,res;
    printf("enter any number");
    scanf("%d",&n);
    res=fact(n);
    printf("\n the factorial of a given number is %d",res);
}
int fact (int n)
{
    if(n<=1)
    {
        return 1;
    }
    else
    {
        return n*fact(n-1);
    }    
}
